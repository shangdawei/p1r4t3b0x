<resources>
    
    <color name="bgColor">#000000</color>
    
    <style name="mainTheme" parent="android:Theme.Light">
	    <item name="android:windowBackground">@color/bgColor</item>
	    <item name="android:colorBackground">@color/bgColor</item>
    </style>
    
    <style name="textLabel">
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="textLabel.textValue">
        <item name="android:layout_alignParentRight">true</item>
    </style>
    
    
    <style name="textLabel.state">
        <item name="android:textSize">22dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#555555</item>
    </style>
    
    <style name="title">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">#222222</item>
        <item name="android:background">#CCCCCC</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    
    <style name="button">
        <item name="android:background">@drawable/button</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:layout_marginLeft">50dip</item>
        <item name="android:layout_marginRight">50dip</item>
        <item name="android:paddingTop">15dip</item>
        <item name="android:paddingBottom">15dip</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">30dp</item>
    </style>
</resources>
